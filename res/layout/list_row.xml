<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector"
                android:orientation="horizontal"
                android:padding="6dip">

    <RelativeLayout
        android:padding="0dip"
        android:layout_alignParentLeft="true"
        android:layout_width="49dip"
        android:layout_height="49dip">

        <hu.rgai.yako.view.extensions.AsyncImageView
            android:id="@+id/list_image"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:src="@drawable/gmail_icon"/>

        <ImageView
            android:id="@+id/list_acc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fb_messenger"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0px"
            android:layout_marginRight="0px"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="51dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail">

            <TextView
                android:id="@+id/subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:maxLines="2"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Subject"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right" >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:minWidth="70dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Jan 01"
                        android:layout_marginRight="5dip"
                        android:textSize="12sp"
                        android:textColor="#10bcc9"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:id="@+id/important"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_important"
                        android:visibility="visible"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:src="@drawable/ic_attachment"
                    android:layout_marginRight="5dip"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </TableRow>


        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="12sp"
            android:typeface="sans"
            android:layout_marginTop="1dip"
            android:layout_marginBottom="3dip"
            android:layout_below="@id/first_row"
            android:text="From" />


        <TextView
            android:id="@+id/account_name"
            android:text="Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_row"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dip"
            android:layout_marginBottom="3dip"
            android:layout_marginRight="5dip"
            android:textSize="12sp"
            />

    </RelativeLayout>

</RelativeLayout>